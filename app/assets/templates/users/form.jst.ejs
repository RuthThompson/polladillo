<% submitValue = user.isNew() ? "Sign up" : "Update" %>
<div class="center">
<% if(PollApp.currentUser.get('guest') && !user.isNew() ){ %>
  <div class="centered" id="guest_forbidden">Sorry, Guests can not edit their account.  Please create an account to use this feature.  </div>
  <br>
<% } %>
 <div class="centered" > 
    <form id="editUser">

      <label for="user_username">Username</label>
      <input type="text" id="user_username" value="<%= user.escape("username")%>" name="user[username]">
  
      <label for="user_email">Email Address</label>
      <input type="text" id="user_email" value="<%= 
      (PollApp.currentUser.get('guest') && !user.isNew() )? 'guest@polladillo.com' : user.escape("email") %>" name="user[email]">


      <label for="user_password">Password</label>
      <input type="password" id="user_password" name="user[password]">
      <br>
      <div id="error_messages" ></div>
      <input class="btn btn-primary" type="submit" value="<%= submitValue %>">

    </form>
  </div>
</div>