<% submitValue = poll.isNew() ? "Create" : "Update" ; %>
<form id="editPoll">
<% if(!poll.isNew()){ %>
  <input type="hidden" name="poll[id]" value="<%= poll.id %>" >
<% } %> 
  
  <label for="poll_title">Title</label>
  <input id="poll_title" value="<%= poll.escape("title")%>" name="poll[title]">
  <ul id="questions">
  <% var questionNum = 0 %>
  <% if(poll.get("questions")){ %>
    <%  poll.get("questions").each( function (question) { %>
    <%= JST["polls/question_form_part"]({question: question, questionNum: questionNum ++ }) %>
    <% }); %>
  <% } %>
  </ul>
  <input type="button" value="Add Question" id="addQuestion" data-question-num="<%= questionNum %>">
 
  <input type="button" value="<%= submitValue %>" id="savePoll" >

</form>