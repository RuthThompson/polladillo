<% submitValue = poll.isNew() ? "Create Poll" : "Update Poll" ; %>
<div class="center">
 <div class="centered" >
   <form id="editPoll">
    <% if(!poll.isNew()){ %>
      <input type="hidden" name="poll[id]" value="<%= poll.id %>" >
    <% } %> 

      <label for="poll_title"><h3>Poll Title</h3></label>
      <input type="text" id="poll_title" value="<%= poll.escape("title")%>" name="poll[title]">
      <ul id="questions">
      <% var questionNum = 0 %>
      <% if(poll.get("questions")){ %>
        <%  poll.get("questions").each( function (question) { %>
        <%= JST["polls/question_form_part"]({question: question, questionNum: questionNum ++ }) %>
        <% }); %>
      <% } %>
      </ul>
      <input type="button" class="btn btn-warning" value="Add Question" id="addQuestion" data-question-num="<%= questionNum %>">
      <br>
      <br>
      <input  class="btn btn-primary" type="button" value="<%= submitValue %>" id="savePoll" >
    </form>
 </div>
</div>